---


export interface ServiceProps {
    icon: string;
    title: string;
    items: string[];
    whatsappMessage: string; // Agregamos una nueva prop para el mensaje de WhatsApp
}

const { icon, title, items, whatsappMessage } = Astro.props;
---

<head>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.1/aos.js" onload="AOS.init({ duration: 100 })"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.1/aos.css" />
</head>

<!-- Card de servicio con animación y estilo mejorado -->
<div 
  class="relative bg-[#ffffff] mt-20 cursor-pointer p-6 rounded-2xl shadow-lg hover:shadow-2xl transition-shadow duration-300 h-[420px] 2xl:h-96 flex flex-col justify-between text-gray-800 overflow-hidden playing"
  data-aos="fade-up"
>
  <!-- Olas animadas de fondo -->
  <div class="wave wave-1"></div>
  <div class="wave wave-2"></div>
  <div class="wave wave-3"></div>

  <!-- Contenido principal de la card -->
  <div class="z-10 space-y-4" data-aos="fade-in">
      <h3 class="text-3xl font-semibold text-[#00509E]">{title}</h3>
      <ul class="text-gray-900 text-left space-y-2">
          {items.map((item) => (
            <li class="text-[17px] pl-4 before:content-['•'] before:text-[#4CAF50] before:pr-2">{item}</li>
          ))}
      </ul>
  </div>

  <!-- Icono y Botón de WhatsApp -->
  <div class="z-10 flex justify-between items-end mt-auto">
      <div class="flex justify-start">
          <img class="w-16 h-16 object-contain bg-white rounded-full shadow-md border-4 border-[#D1D5DB]" src={icon} alt="" />
      </div>
      <a
          href={`https://api.whatsapp.com/send?phone=573054188289&text=${encodeURIComponent(whatsappMessage)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-[#4CAF50] text-white px-4 py-2 rounded-full shadow-md hover:shadow-lg hover:bg-[#00509E] transition duration-300"
      >
          Contactar por WhatsApp
      </a>
  </div>
</div>

<style>
/* Estilos base */
.playing {
  position: relative;
  overflow: hidden;
}

/* Olas animadas con paleta verde y azul clara */
.wave {
  position: absolute;
  width: 550px;
  height: 650px;
  background: linear-gradient(135deg, #b8e3fa, #a0d5e6 50%, #84c5d4);
  border-radius: 40%;
  opacity: 0.15;
  animation: waveMovement 20s infinite linear;
}

.wave-1 {
  top: -100px;
  left: -200px;
  animation-duration: 20s;
}

.wave-2 {
  top: -180px;
  left: -150px;
  animation-duration: 25s;
}

.wave-3 {
  top: -160px;
  left: -100px;
  animation-duration: 30s;
}

/* Animación de las olas */
@keyframes waveMovement {
  0% {
      transform: translateX(0px) translateY(0px) rotate(0deg);
  }
  50% {
      transform: translateX(20px) translateY(15px) rotate(180deg);
  }
  100% {
      transform: translateX(0px) translateY(0px) rotate(360deg);
  }
}
</style>
