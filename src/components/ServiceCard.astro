---
// Props para recibir los datos del servicio
export interface ServiceProps {
    icon: string;
    title: string;
    items: string[];
}

const { icon, title, items } = Astro.props;
---

<div
    class="bg-white p-6 shadow-lg rounded-lg hover:shadow-xl transition-shadow duration-300"
>
    <div>
        <h3 class="text-xl font-semibold mb-4">{title}</h3>
    <ul class="text-gray-600 text-left">
        {items.map((item) => <li class="mb-2">• {item}</li>)}
    </ul>
    </div>

    <div class="bg-white flex w-full justify-end">
        <!-- Icono (SVG dinámico según la prop) -->
        <img class="w-20" src={icon} alt="" />
    </div>
</div>
