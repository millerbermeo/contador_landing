---
export interface ServiceProps {
  icon: string;
  title: string;
  items: string[];
  whatsappMessage: string; // Agregamos una nueva prop para el mensaje de WhatsApp
}

const { icon, title, items, whatsappMessage } = Astro.props;
---

<head>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.1/aos.js"
    onload="AOS.init({ duration: 10 })"></script>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.1/aos.css"
  />
</head>
<div class="lg:hover:-translate-y-5 cursor-pointer duration-300">
  <div
    class="lg:group bg-[#52b788] mt-16 p-8 rounded-3xl hover:shadow-xl transition-shadow duration-300 h-[500px] flex flex-col justify-between text-gray-800"
    data-aos="fade-up"
  >
    <!-- Contenido principal -->
    <div class="space-y-6 cursor-pointer">
      <h3
        class="text-2xl lg:text-3xl font-semibold text-white text-center lg:group-hover:text-white"
      >
        {title}
      </h3>
      <ul class="text-gray-700 text-base lg:text-xl space-y-3">
        {
          items.map((item) => (
            <li class="pl-4 before:content-['✓'] before:text-green-600 before:pr-2 group-hover:text-white">
              {item}
            </li>
          ))
        }
      </ul>
    </div>

    <!-- Icono y botón de acción -->
    <div class="flex items-center justify-between mt-auto">
      <img
        src={icon}
        alt="Icono del servicio"
        class="w-20 h-20 bg-white rounded-full shadow-md border-4 border-gray-300"
      />
      <a
        href={`https://api.whatsapp.com/send?phone=573054188289&text=${encodeURIComponent(whatsappMessage)}`}
        target="_blank"
        rel="noopener noreferrer"
        class="bg-[#2d6a4f] text-white text-lg px-6 py-3 rounded-full shadow-md hover:bg-green-700 hover:shadow-lg transition-transform transform hover:scale-105"
      >
        Contactar por WhatsApp
      </a>
    </div>
  </div>
</div>

<style>
  .bg-gradient-to-r:hover {
    background: #52b788;
    color: #fff;
  }
  @media (hover: none) {
    .bg-gradient-to-r:hover {
      background: inherit;
      color: inherit;
    }
  }
</style>
