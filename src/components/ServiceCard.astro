---
// Props para recibir los datos del servicio
export interface ServiceProps {
  icon: string;
  title: string;
  items: string[];
}

const { icon, title, items } = Astro.props;
---

<div class="bg-white p-6 shadow-lg rounded-lg hover:shadow-xl transition-shadow duration-300">
  <div class="mb-4 text-blue-500">
    <!-- Icono (SVG dinámico según la prop) -->
    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto" viewBox="0 0 20 20" fill="currentColor">
      <use href={icon} />
    </svg>
  </div>
  <h3 class="text-xl font-semibold mb-4">{title}</h3>
  <ul class="text-gray-600 text-left">
    {items.map(item => (
      <li class="mb-2">• {item}</li>
    ))}
  </ul>
</div>
