---
import Header from "../components/Header.astro";
import Home from "../components/Home.astro";
import Navbar from "../components/Navbar.astro";
import AuthorCard from "../components/AuthorCard.astro";
import ServiceCard from "../components/ServiceCard.astro";
import Whatsapp from "../components/Whatsapp.astro";
import AboutMe from "../components/AboutMe.astro";
import ImageCarousel from "../components/ImageCarousel.astro";
import Footer from "../components/Footer.astro";
import { services } from "../utils/Services.astro";
import Articulos from "../components/Articulos.astro";
import MenuAcordeon from "../components/MenuAcordeon.astro";
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="logotipo.jpeg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="Contador Público en Colombia. Ofrezco asesoría contable y fiscal personalizada para empresas y personas, con precisión, transparencia y cumplimiento legal. Servicios de análisis integral, planificación fiscal, y automatización de procesos para maximizar beneficios y reducir costos. Consultoría estratégica y soporte personalizado con actualización constante y generación de informes."
        />

        <title>
            Contador Público en Colombia | Asesoría Financiera y Contable -
            Precisión, Transparencia, y Optimización
        </title>
        <script
            src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
        ></script>
        <script src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
        ></script>
    </head>

    <body>
        <Header />
        <Navbar />
        <Whatsapp />
        <Home />

        <section
            class="w-full lg:h-[1200px] flex justify-center items-center bg-gradient-to-l from-white to-green-300"
            id="servicios"
        >
            <div class="container mx-auto py-16 px-4 lg:px-8 text-gray-800">
                <h2
                    class="text-3xl lg:text-4xl font-bold text-center text-[#000] lg:mb-10 mb-6 break-all flex-wrap translate-y-6 2xl:translate-x-0"
                >
                    Portafolio de Servicios
                </h2>

                <span class="block text-center mx-auto text-gray-500 mb-8 translate-y-8 2xl:translate-x-0">
                    Buenas decisiones para tu empresa
                </span>

                <div
                    class="grid md:grid-cols-2 lg:grid-cols-3 gap-0 lg:gap-8 -translate-y-14 lg-translate-y-6 2xl:translate-y-0 scale-95 lg:scale-[0.9] 2xl:scale-100"
                >
                    {
                        services.map((service) => (
                            <ServiceCard
                                icon={service.icon}
                                title={service.title}
                                items={service.items}
                                whatsappMessage={service.whatsappMessage}
                            />
                        ))
                    }
                </div>
            </div>
        </section>

        <AuthorCard />

        <AboutMe />

        <section
            class="my-16 flex w-full flex-wrap mx-auto justify-center items-start gap-y-40 gap-x-4"
        >
            <div class="flex justify-center flex-wrap gap-4 w-full">
                <MenuAcordeon />
                <div class="p-2">
                    <img
                        class="w-full lg:w-96"
                        src="tarifas.jpg"
                        alt="Tarifas de servicios contables"
                    />
                    <span
                        class="text-xl font-normal hover:text-gray-700 cursor-pointer my-2 underline"
                        >Conocer más sobre tarifas y costos</span
                    >
                </div>
            </div>
            <Articulos />
        </section>

        <ImageCarousel />
        <Footer />
    </body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html {
        scroll-behavior: smooth;
    }
</style>
