---
import Header from "../components/Header.astro";
import Home from "../components/Home.astro";
import Navbar from "../components/Navbar.astro";
import AuthorCard from "../components/AuthorCard.astro";
import ServiceCard from "../components/ServiceCard.astro";
import Whatsapp from "../components/Whatsapp.astro";
import AboutMe from "../components/AboutMe.astro";
import ImageCarousel from "../components/ImageCarousel.astro";
import Footer from "../components/Footer.astro";
import { services } from "../utils/Services.astro";
import Articulos from "../components/Articulos.astro";
import MenuAcordeon from "../components/MenuAcordeon.astro";
import Tarifa from "../components/Tarifa.astro";
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="logotipo.jpeg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="Contador Público en Colombia. Ofrezco asesoría contable y fiscal personalizada para empresas y personas, con precisión, transparencia y cumplimiento legal. Servicios de análisis integral, planificación fiscal, y automatización de procesos para maximizar beneficios y reducir costos. Consultoría estratégica y soporte personalizado con actualización constante y generación de informes."
        />

        <title>
            Contador Público en Colombia | Asesoría Financiera y Contable -
            Precisión, Transparencia, y Optimización
        </title>
        <script
            src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
        ></script>
        <script src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
        ></script>
    </head>

    <body>
        <Header />
        <Navbar />
        <Whatsapp />
        <Home />
        <section class="w-full flex justify-center">
            <div
                class="w-full container gap-y-4 flex justify-center items-center flex-col mx-auto"
                id="servicios"
            >
                <h2
                    class="text-3xl lg:text-6xl font-bold text-center text-[#2d6a4f] lg:mb-10 mb-6 break-all flex-wrap"
                >
                    Portafolio de Servicios
                </h2>

                <span class="text-center mx-auto mb-20 flex text-xl text-gray-600">
                    Buenas decisiones para tu empresa
                </span>

                <div
                    class="grid md:grid-cols-2 lg:grid-cols-3 gap-0 lg:gap-8 -translate-y-14 lg:translate-y-0 scale-x-90 lg:scale-[0.9] 2xl:scale-100"
                >
                    {
                        services.map((service) => (
                            <ServiceCard
                                icon={service.icon}
                                title={service.title}
                                items={service.items}
                                whatsappMessage={service.whatsappMessage}
                            />
                        ))
                    }
                </div>
            </div>
        </section>

        <section class="bg-gray-50">
            <AuthorCard />
        </section>

        <AboutMe />
        <Tarifa />
        <section
            class="flex gap-10 justify-center items-start lg:mt-10 flex-wrap bg-white"
        >
            <MenuAcordeon />
            <div class="p-4">
                <div
                    class="flex flex-wrap lg:grid grid-cols-2 gap-4 justify-center"
                >
                    <img
                        class="w-[90%] lg:w-full h-48 object-cover rounded-lg shadow-md hover:scale-105 transition-transform"
                        src="slide3.jpeg"
                        alt="Tarifas de servicios contables"
                    />
                    <img
                        class="w-[90%] lg:w-full h-48 object-cover rounded-lg shadow-md hover:scale-105 transition-transform"
                        src="slide1-min.jpg"
                        alt="Tarifas de servicios contables"
                    />

                    <img
                        class="w-[90%] lg:w-full h-48 object-cover rounded-lg shadow-md hover:scale-105 transition-transform"
                        src="slide2-min.jpg"
                        alt="Tarifas de servicios contables"
                    />
                    <img
                        class="w-[90%] lg:w-full h-48 object-cover rounded-lg shadow-md hover:scale-105 transition-transform"
                        src="slide4.jpeg"
                        alt="Tarifas de servicios contables"
                    />
                </div>
                <span
                    class="block mt-4 text-center text-xl font-medium text-gray-800 hover:text-gray-700 cursor-pointer underline"
                >
                    Contáctanos para conocer más sobre tarifas y costos
                </span>
            </div>
        </section>

        <Articulos />

        <ImageCarousel />
        <Footer />
    </body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html {
        scroll-behavior: smooth;
    }
</style>
